# Viewing Service Configuration Example
# Copy this file to .env and update the values

# Server Configuration
SERVER_PORT=8080

# Redis Configuration
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# PostgreSQL Configuration (Optional)
POSTGRES_ENABLED=false
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=
POSTGRES_DB=viewing_service

# JWT Configuration
# IMPORTANT: Change this secret in production!
JWT_SECRET=change-this-secret-in-production
JWT_EXPIRATION=1h

# Service URLs
# These should point to your Identity and Content services
IDENTITY_SERVICE_URL=http://localhost:8081
CONTENT_SERVICE_URL=http://localhost:8082

# Concurrency Configuration
# Maximum number of concurrent streams per account
MAX_CONCURRENT_STREAMS=4

# Session Configuration
SESSION_TIMEOUT=24h
HEARTBEAT_INTERVAL=30s
